{
  "layer": "top",
  "position": "top",
  "height": 35,
  // "width": 1500,
  "spacing": 5,
  "margin-top": 5,
  "margin-right": 8,
  "margin-left": 8,

  "modules-left": ["hyprland/workspaces", "hyprland/window"],

  "modules-center": ["clock#portugal", "clock#brasil"],

  "modules-right": ["group/hardware", "group/actions"],

  "group/hardware": {
    "orientation": "horizontal",
    "modules": ["pulseaudio", "backlight", "battery", "cpu", "disk", "memory"],
  },

  "group/actions": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "children-class": "childs",
      "transition-left-to-right": false,
    },
    "modules": [
      "custom/rofi",
      "custom/notification",
      "custom/wifi",
      "custom/power",
      "custom/lock",
    ],
  },

  "group/quicktab": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "children-class": "childs",
      "transition-left-to-right": true,
    },
    "modules": ["custom/blog_vps", "custom/invisible_matrix_vps"],
  },

  "custom/rofi": {
    "format": "Û∞ÆØ",
    "on-click": "rofi -show drun",
    "escape": true,
    "tooltip": false,
  },

  // Modules configuration
  "hyprland/workspaces": {
    "disable-scroll": true,
    "active-only": false,
    "all-outputs": true,
    "warp-on-scroll": false,
    "sort-by-name": true,
    "format": " {icon} ",
    "format-icons": {
      "default": "ÓÆ¥",
    },
    "persistent-workspaces": {
      "*": 5,
    },
  },

  "hyprland/window": {
    "format": "{class}",
    "max-length": 20,
    "rewrite": {
      "": "Ôçô hyprland",
      "~": "ÓØä terminal",
      "brave-browser": "Brave",
    },
  },

  "pulseaudio": {
    "format": "ÔÄ® {volume}%",
    "format-muted": "<span> Óª® </span>{volume}%",
    "format-bluetooth": "<span> Û∞Ç∞ </span>{volume}%",
    "format-bluetooth-muted": "<span> Û∞Ç≤ </span>{volume}%",
    "format-source": "{volume}% ÔÑ∞",
    "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "tooltip": false,
    "max-volume": 130,
  },

  "battery": {
    "interval": 1,
    "format-icons": ["ÔâÑ ", "ÔâÉ ", "ÔâÇ ", "ÔâÅ ", "ÔâÄ "],
    "format": "{icon}{capacity}%",
    "format-plugged": "Û∞ÇÖ {capacity}%",
    "format-alt": "Û±ß• {time}",
    "tooltip": false,
  },

  "clock#brasil": {
    "timezone": "America/Sao_Paulo",
    "interval": 1,
    "format": "ÔÄó üáßüá∑ {:%H:%M:%S}",
    "format-alt": "ÔÄó {:%A, %B %d, %Y - %H:%M:%S  (%z)}",
    "tooltip-format": "{calendar}",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#cba6f7'><b>{}</b></span>",
        "days": "<span color='#cdd6f4'>{}</span>",
        "weekdays": "<span color='#89b4fa'><b>{}</b></span>",
        "today": "<span color='#f38ba8'><b><u>{}</u></b></span>",
      },
    },
    "actions": {
      "on-click-right": "mode",
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down",
    },
  },

  "clock#portugal": {
    "interval": 1,
    "format": "ÔÄó üáµüáπ {:%H:%M:%S}",
    "format-alt": "ÔÄó {:%A, %B %d, %Y - %H:%M:%S  (%z)}",
    "tooltip-format": "{calendar}",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#cba6f7'><b>{}</b></span>",
        "days": "<span color='#cdd6f4'>{}</span>",
        "weekdays": "<span color='#89b4fa'><b>{}</b></span>",
        "today": "<span color='#f38ba8'><b><u>{}</u></b></span>",
      },
    },
    "actions": {
      "on-click-right": "mode",
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down",
    },
  },

  "backlight": {
    "device": "intel_backlight",
    "format": "{icon} {percent}%",
    "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"],
  },

  "disk": {
    "interval": 30,
    "format": "Û∞ãä {percentage_used:02}%",
    "format-alt": "Û∞ãä {specific_used:0.0f}G/{specific_total:0.0f}G",
    "tooltip-format": "Usage: {specific_used:0.2f}GB / {specific_total:0.2f}GB",
    "unit": "GB",
  },

  "cpu": {
    "interval": 10,
    "format": "Ôãõ {:0.1f}%",
    "max-length": 10,
  },

  "memory": {
    "interval": 30,
    "format": "ÔÉâ {}%",
    "format-alt": "ÔÉâ {used:0.1f}G/{total:0.1f}G",
    "tooltip-format": "Usage: {used:0.1f}G/{total:0.1f}G\nSwap Usage: {swapPercentage}%",
  },

  "custom/wifi": {
    "exec": "~/.config/waybar/scripts/wifi-status.sh",
    "return-type": "json",
    "format": "{}",
    "tooltip": true,
    "on-click": "~/.config/waybar/scripts/wifi-menu.sh",
    "interval": 1,
    "min-length": 1,
  },

  "custom/lock": {
    "tooltip": false,
    "on-click": "sh -c '(sleep 0.5s; swaylock --grace 0)' & disown",
    "format": "ÔÄ£",
  },

  "custom/power": {
    "tooltip": false,
    "on-click": "wlogout &",
    "format": "Û∞ê•",
  },

  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "Û∞Ö∏",
      "none": "Û∞Çú",
      "dnd-notification": "Û∞Ö∏",
      "dnd-none": "Û±è®",
      "inhibited-notification": "Û∞Ö∏",
      "inhibited-none": "Û∞Çú",
      "dnd-inhibited-notification": "Û∞Ö∏",
      "dnd-inhibited-none": "Û±è®",
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click-right": "swaync-client -d -sw",
    "on-click": "swaync-client -t -sw",
    "escape": true,
  },

  "custom/blog_vps": {
    "tooltip": false,
    "format": "ÓØä ",
    "on-click": "~/.config/waybar/scripts/connect_to_blog.sh",
  },

  "custom/invisible_matrix_vps": {
    "tooltip": false,
    "format": "ÓØä ",
    "on-click": "alacritty -e ssh invisible_matrix@46.202.128.101",
  },
}
